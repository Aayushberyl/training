<h2>Faculty Form</h2>

 <%= @faculty.errors.messages %>

<%= form_for @faculty , url:faculty_path do |f| %>

  
  <%= f.label :name , "Name:" %>
  <%= f.text_field :name %><br><br>


  <%= f.label :salary , "Salary" %>
  <%= f.number_field :salary  %><br>

  <%= f.label :course_id, "Course ID" %>
  <%= f.select :course_id, Course.ids.map{|i| [i,i]} %><br>
  <br>

  <%= f.submit "Submit"%>

<% end %>

