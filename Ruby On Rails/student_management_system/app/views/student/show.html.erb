<%# <button><a href='/home'><=Back</a></button> %>
<%= link_to "Back", home_path , :class => "button" %>
<h2>Student Details</h2>
<table>

  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Email</th>
    <th>Contact No.</th>
    <th>Enrolled Date </th>
    <th>Course Name </th>
    <th>Modify</th>
    <th>Delete</th>
    <th>Send Mail</th>
  </tr>
  
<% @students.order(:id).each do |student| %>
  <tr>
    <td><%= student.name %></td>
    <td><%= student.age %></td>
    <td><%= student.email %></td>
    <td><%= student.contact_no %></td>
    <td><%= student.enrolled_date %></td>
    <td><%= student.course.name %></td>
    <td><%= link_to "Edit" , student_path(student.id) , method: :put %></td>
    <td><%= link_to "Delete" , student_path(student.id) , method: :delete , data: {confirm: 'Are You Sure?'} %></td>
    <td><%= link_to "Send" , student_show_path(mail: student) %></td>
  </tr>
  
  <%end%>
  
</table>

<div class = "pages">
  <%= "Page Numbers :" %>
  <% (1..@page_size).each do |page_no| %>
    <%= link_to page_no, student_show_path(page: page_no-1) , class: "pgnos"%>
  <%end%>
</div>
