<h2>Certification Form</h2>

 <%= @certification.errors.messages %>

<%= form_for @certification , url:certification_path do |f| %>

  
  <%= f.label :name , "Name:" %>
  <%= f.text_field :name %><br><br>
  
  <%= f.label :fees , "Fees: " %>
  <%= f.number_field :fees %><br>


  <%= f.label :duration, "Duration:" %>
  <%= f.number_field :duration %><br><br>

    <%= f.submit "Submit" , id:"btn4"%>

<% end %>


