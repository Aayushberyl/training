<h2>Guardian Form</h2>

 <%= @guardian.errors.messages %>

<%= form_for @guardian , url:guardian_path do |f| %>

  
  <%= f.label :name , "Name:" %>
  <%= f.text_field :name %><br><br>
  
  <%= f.label :contact , "Contact No." %>
  <%= f.number_field :contact , is: 10 %><br>


  <%= f.label :student_id, "Student ID" %>
  <%= f.select :student_id, Student.order(:id).ids.map{|i| [i,i]} %><br><br>

  <%= f.label :student_id, "Student Name" %>
  <%= f.select :student_id, Student.order(:id).ids.map{|i| [Student.find(i).name,i]} %><br><br>

    <%= f.submit "Submit"%>

<% end %>


